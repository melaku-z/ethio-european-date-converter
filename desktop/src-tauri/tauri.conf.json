{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "Ethiopian Calendar Converter",
  "version": "4.2.3",
  "identifier": "com.ethiopian-calendar-converter.app",
  "build": {
    "beforeBuildCommand": "pnpm -w run build",
    "beforeDevCommand": "pnpm -w run dev",
    "devUrl": "http://localhost:5173",
    "frontendDist": "../../dist"
  },
  "bundle": {
    "active": true,
    "category": "Utility",
    "copyright": "Copyright (c) 2024 melaku.zewdu",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "longDescription": "Convert dates between Ethiopian and European calendars",
    "shortDescription": "Ethio-European Date Converter",
    "targets": "all"
  },
  "app": {
    "security": {
      "csp": null
    },
    "windows": [
      {
        "fullscreen": false,
        "height": 700,
        "resizable": true,
        "title": "Ethiopian Calendar",
        "width": 800
      }
    ]
  }
}
