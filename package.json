{
  "name": "ethiopian-calendar-date-converter-web-app",
  "description": "Convert dates between Ethiopian and European calendars offline.",
  "version": "3.0.0",
  "keywords": [
    "Calendar Converter",
    "Ethiopian Calendar"
  ],
  "author": "Melaku Zewdu <melaku44@gmail.com>",
  "license": "MIT",
  "type": "module",
  "dependencies": {
    "@fortawesome/fontawesome-free": "^6.4.0",
    "ethiopian-calendar-date-converter": "workspace:*",
    "tailwindcss": "^3.3.2",
    "vue": "^3.3.4"
  },
  "devDependencies": {
    "@playwright/test": "^1.34.3",
    "@rushstack/eslint-patch": "^1.3.0",
    "@types/jsdom": "^20.0.1",
    "@types/koa": "^2.13.6",
    "@types/koa-static": "^4.0.2",
    "@types/node": "^18.16.16",
    "@vitejs/plugin-vue": "^4.2.3",
    "@vitest/browser": "^0.32.0",
    "@vue/eslint-config-prettier": "^7.1.0",
    "@vue/eslint-config-typescript": "^11.0.3",
    "@vue/test-utils": "^2.3.2",
    "@vue/tsconfig": "^0.4.0",
    "@vueuse/head": "^1.1.26",
    "@web/dev-server": "^0.2.1",
    "autoprefixer": "^10.4.14",
    "compress": "link:@types/koajs/compress",
    "eslint": "^8.42.0",
    "eslint-plugin-vue": "^9.14.1",
    "jsdom": "^22.1.0",
    "koa": "^2.14.2",
    "koa-compress": "github:koajs/compress",
    "koa-static": "^5.0.0",
    "lighthouse": "^10.2.0",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.24",
    "prettier": "^2.8.8",
    "puppeteer": "^20.5.0",
    "typescript": "^4.9.5",
    "vite": "^4.3.9",
    "vite-plugin-pwa": "^0.16.3",
    "vite-ssg": "^0.22.2",
    "vitest": "^0.32.0",
    "vue-tsc": "^1.6.5",
    "workbox-window": "^7.0.0"
  },
  "scripts": {
    "dev": "vite",
    "build:dependencies": "pnpm --filter ethiopian-calendar-date-converter build",
    "build:package": "run-p type-check build-only",
    "build": "pnpm run build:dependencies && pnpm run build:package",
    "preview": "vite preview",
    "test": "vitest run && pnpm run test:dependencies",
    "test:dependencies": "pnpm --filter ethiopian-calendar-date-converter test",
    "test:watch": "vitest",
    "test:e2e": "playwright test",
    "test:playwright:install": "playwright install --with-deps",
    "build-only": "vite-ssg build",
    "start-server:prod": "web-dev-server --root-dir dist --port 8000 --open --compatibility none",
    "type-check": "vue-tsc --noEmit -p tsconfig.vitest.json --composite false",
    "lint": "eslint . --ext .vue,.js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts --fix --ignore-path .gitignore"
  },
  "packageManager": "pnpm@8.6.1",
  "pnpm": {
    "overrides": {
      "ethiopian-calendar-date-converter": "workspace:*"
    }
  },
  "private": true
}