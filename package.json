{
  "name": "ethiopian-calendar-date-converter-web-app",
  "description": "Convert dates between Ethiopian and European calendars offline.",
  "version": "3.0.0",
  "keywords": [
    "Calendar Converter",
    "Ethiopian Calendar"
  ],
  "author": "Melaku Zewdu <melaku44@gmail.com>",
  "license": "MIT",
  "type": "module",
  "dependencies": {
    "@fortawesome/fontawesome-free": "^6.2.1",
    "ethiopian-calendar-date-converter": "workspace:2.0.1",
    "tailwindcss": "^3.2.4",
    "vue": "^3.2.45"
  },
  "devDependencies": {
    "@playwright/test": "^1.28.1",
    "@rushstack/eslint-patch": "^1.2.0",
    "@types/jsdom": "^20.0.1",
    "@types/node": "^18.11.13",
    "@vitejs/plugin-vue": "^4.0.0",
    "@vitest/browser": "^0.25.7",
    "@vue/eslint-config-prettier": "^7.0.0",
    "@vue/eslint-config-typescript": "^11.0.2",
    "@vue/test-utils": "^2.2.6",
    "@vue/tsconfig": "^0.1.3",
    "@vueuse/head": "^1.0.22",
    "@web/dev-server": "^0.1.35",
    "autoprefixer": "^10.4.13",
    "eslint": "^8.29.0",
    "eslint-plugin-vue": "^9.8.0",
    "jsdom": "^20.0.3",
    "lighthouse": "^9.6.8",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.19",
    "prettier": "^2.8.1",
    "puppeteer": "^19.4.0",
    "typescript": "^4.9.4",
    "vite": "^4.0.0",
    "vite-plugin-pwa": "^0.14.0",
    "vite-ssg": "^0.22.0",
    "vitest": "^0.25.7",
    "vue-tsc": "^1.0.12",
    "workbox-window": "^6.5.4"
  },
  "scripts": {
    "dev": "vite",
    "build:dependencies": "pnpm --filter ethiopian-calendar-date-converter build",
    "build:package": "run-p type-check build-only",
    "build": "pnpm run build:dependencies && pnpm run build:package",
    "preview": "vite preview",
    "test": "vitest run && pnpm run test:dependencies",
    "test:dependencies": "pnpm --filter ethiopian-calendar-date-converter test",
    "test:watch": "vitest",
    "test:e2e": "playwright test",
    "build-only": "vite-ssg build",
    "start-server:prod": "web-dev-server --root-dir dist --port 8000 --open --compatibility none",
    "type-check": "vue-tsc --noEmit -p tsconfig.vitest.json --composite false",
    "lint": "eslint . --ext .vue,.js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts --fix --ignore-path .gitignore"
  },
  "packageManager": "pnpm@7.18.2",
  "pnpm": {
    "overrides": {
      "ethiopian-calendar-date-converter": "workspace:*"
    }
  },
  "private": true
}
