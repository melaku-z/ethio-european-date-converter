/*
  # only connect over HTTPS
  Strict-Transport-Security: max-age=31536000
  X-Frame-Options: DENY
  X-Content-Type-Options: nosniff
  Referrer-Policy: no-referrer
  Content-Security-Policy: default-src https: 'unsafe-eval' 'unsafe-inline';img-src https: data:;object-src 'none';font-src https: data:
  # prevent injection of plugins which can execute JavaScript
  object-src: none
  # prevent injection of base tags. They can be used to set the base URL for all relative (script) URLs to an attacker controlled domain
  base-uri: none

# Cache assets generated by vite forever
/assets/*
  Cache-Control: public, max-age=31536000, s-maxage=31536000, immutable

